<launch>
    <node pkg="hokuyo_node" type="hokuyo_node" name="hokuyo_node" output="screen">
       <param name="min_ang" value=" -2.2689" />
       <param name="max_ang" value="  2.2689" />
       <param name="frame_id" value="laser1_link" />
       <remap from="scan" to="/laser1/scan" />
    </node>
    <node pkg="hector_scanmatcher" type="hector_scanmatcher" name="hector_scanmatcher" output="screen"> 
        <param name="scan_topic" value="/laser1/scan" />
        <param name="base_frame" value="base_stabilized" />
        <param name="odom_frame" value="odom"/>
        <param name="pub_map_odom_transform" value="false"/>
        <param name="output_timing" value="false"/>
        <param name="use_tf" value="true"/>
        <param name="map_resolution" value="0.05"/>
        <param name="map_size" value="768"/>
    </node>
</launch>
